# 1. Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copy csproj files and restore as distinct layers
COPY ./src/*.sln ./
COPY ./src/MovieBot.Api/*.csproj ./MovieBot.Api/
COPY ./src/MovieBot.Data/*.csproj ./MovieBot.Data/
COPY ./src/MovieBot.Domain/*.csproj ./MovieBot.Domain/
COPY ./src/MovieBot.Service/*.csproj ./MovieBot.Service/

RUN dotnet restore

# Copy everything else and build
COPY ./src/. ./src/
WORKDIR /app/src/MovieBot.Api
RUN dotnet publish -c Release -o /out

# 2. Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /out .

ENTRYPOINT ["dotnet", "MovieBot.Api.dll"]
